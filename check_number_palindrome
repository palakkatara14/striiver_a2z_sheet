class Solution {
    public boolean isPalindrome(int x){
          int r;
          int temp;
          int sum=0;
          temp=x;
          
          while(x>0){
              r=x%10;
              x=x/10;
              sum=(sum*10)+r;
           }
           
           if(sum==temp){
               return true;
           }
           else{
               return false;
           }
    }
}
